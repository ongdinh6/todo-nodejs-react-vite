{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "ES6"
    },
    "include": ["packages/**/*.ts", "packages/**/*.tsx"],
    "exclude": ["node_modules"],
    "extends": [
      "./packages/backend/tsconfig.json",
      "./packages/frontend/tsconfig.json"
    ]
}