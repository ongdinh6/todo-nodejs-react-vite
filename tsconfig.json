{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES6",
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "outDir": "../../dist/packages/backend/src",
    "jsx": "react",
    "baseUrl": "./",
    "types": [
      "node",
      "jest",
      "@types/node"
    ],
    "paths": {
      "*": ["packages/frontend/src/*", "packages/backend/src/*"]
    }
  },
  "include": ["packages/backend/src/**/*.ts", "packages/frontend/src/**/*.tsx", "packages/frontend/src/**/*.ts"],
  "exclude": ["node_modules", "packages/backend/__test__", "packages/frontend/__test__"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}