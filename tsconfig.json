{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "ES6",
        "rootDirs": [
            "packages/backend",
            "packages/frontend"
        ]
    },
    "include": ["packages/**/*.ts", "packages/**/*.tsx"],
    "exclude": ["node_modules", "packages/backend/__test__", "packages/frontend/__test__"],
    "extends": [
      "./packages/backend/tsconfig.json",
      "./packages/frontend/tsconfig.json"
    ]
}