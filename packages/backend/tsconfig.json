{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "target": "ES6",
        "outDir": "../../dist",
        "rootDir": "src",
        "strict": true,
        "allowImportingTsExtensions": true,

        "paths": {
          "@controllers/*": ["src/controllers/*"],
          "@services/*": ["src/services/*"],
          "@entities/*": ["src/entities/*"],
          "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts"]
}