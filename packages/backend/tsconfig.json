{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "target": "ES6",
        "outDir": "../../dist",
        "strict": true,
        "baseUrl": "./",
        "paths": {
          "@controllers/*": ["src/controllers/*"],
          "@services/*": ["src/services/*"],
          "@entities/*": ["src/entities/*"],
          "@/*": ["src/*"],
        }
    },
    "traceResolution": true,
    "include": ["src/**/*.ts"],
}