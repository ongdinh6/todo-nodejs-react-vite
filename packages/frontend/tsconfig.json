{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "rootDir": "src",
    "types": [
      "src/typings",
      "jest"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "__test__"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
